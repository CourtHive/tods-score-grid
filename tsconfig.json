{
  "include": ["src", "types"],
  "exclude": ["node_modules", "public", "**/*.d.ts", "dist"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "./scratch",
    "rootDir": "./src",
    "sourceMap": false,
    "strict": true
  }
}
